{
  "private": true,
  "scripts": {
    "build": "npm run build:sanity && npm run build:web",
    "build:sanity": "npm --prefix studio run build",
    "build:web": "next build",
    "dev": "next",
    "fmt": "prettier --ignore-path .gitignore --write --cache .",
    "postinstall": "(cd studio && npx @sanity/cli install)",
    "start:sanity": "npm --prefix studio run start",
    "start:web": "next start"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@portabletext/react": "^1.0.6",
    "@sanity/client": "^3.4.1",
    "@sanity/image-url": "^1.0.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "next": "^12.3.2",
    "next-sanity": "^0.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.39.1"
  },
  "devDependencies": {
    "@sanity/cli": "^2.35.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.1"
  }
}
